# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/telegram_ads?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Telegram Bot
BOT_TOKEN="your_bot_token_here"
TELEGRAM_WEBAPP_URL="https://your-domain.com"
VITE_BOT_USERNAME="your_bot_username"

# Telegram MTProto
TELEGRAM_API_ID="your_api_id"
TELEGRAM_API_HASH="your_api_hash"
TELEGRAM_PHONE="your_phone_number"

# TON
TON_NETWORK="testnet"
TON_MASTER_WALLET_MNEMONIC="your 24 word mnemonic here"
TON_MASTER_WALLET_ADDRESS="your_master_wallet_address"
TON_API_KEY="your_toncenter_api_key"

# Security
JWT_SECRET="your_jwt_secret_min_32_chars_long"
JWT_REFRESH_SECRET="your_refresh_secret_min_32_chars"
ENCRYPTION_KEY="your_32_byte_encryption_key_hex"

# App
NODE_ENV="development"
API_PORT=3000
BOT_PORT=3001
MTPROTO_PORT=3002
WORKERS_PORT=3003

# CORS
ALLOWED_ORIGINS="https://web.telegram.org,https://your-domain.com"

# MinIO (S3-compatible storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin"
MINIO_BUCKET="tam-avatars"
# Public URL for avatars (browser-accessible). Leave empty for local dev.
# Use Nginx proxy for security: location /storage/ { proxy_pass http://minio:9000/tam-avatars/; }
# Then set: MINIO_PUBLIC_URL="https://yourdomain.com/storage"
MINIO_PUBLIC_URL=""
