{
  "name": "telegram-ads-marketplace",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@tam/api",
    "dev:bot": "turbo run dev --filter=@tam/bot",
    "dev:workers": "turbo run dev --filter=@tam/workers",
    "dev:mtproto": "turbo run dev --filter=@tam/mtproto-worker",
    "dev:web": "turbo run dev --filter=@tam/web",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate": "turbo run db:generate --filter=@tam/prisma-client",
    "db:migrate": "turbo run db:migrate --filter=@tam/prisma-client",
    "db:push": "pnpm --filter @tam/prisma-client exec prisma db push",
    "docker:dev": "docker compose -f docker/docker-compose.yml up -d",
    "docker:prod": "docker compose -f docker/docker-compose.prod.yml up -d",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
